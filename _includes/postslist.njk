		{%- if post.data.image %}
		  <div class="postlist-meta">
		    <time class="post-date" datetime="{{ post.date | htmlDateString }}">
		      {{ post.date | readableDate("d LLLL yyyy") }}
		    </time>
		    <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="postlist-thumb">
		  </div>
		{%- else %}
		  <time class="post-date" datetime="{{ post.date | htmlDateString }}">
		    {{ post.date | readableDate("d LLLL yyyy") }}
		  </time>
		{%- endif %}

	</li>
{%- endfor %}
</ol>
